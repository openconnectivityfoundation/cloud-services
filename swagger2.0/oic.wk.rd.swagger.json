        },

        "sel" : {
          "description": "A bias factor calculated by the Resource directory",
          "maximum": 100,
          "minimum": 0,
          "readOnly": true,
          "type": "integer"
        },

        "id" : {
          "$ref": "https://openconnectivityfoundation.github.io/core/schemas/oic.common.properties.core-schema.json#/definitions/id"
        },

        "if" : {
